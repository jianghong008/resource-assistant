{
  "name": "__MSG_app_name__",
  "description": "__MSG_description__",
  "version": "1.0",
  "manifest_version": 3,
  "homepage_url": "http://cmh.jhhaha.com",
  "permissions": [
    "clipboardWrite",
    "downloads",
    "webRequest",
    "tabs"
  ],
  "default_locale":"en",
  "options_page": "settings/index.html",
  "host_permissions": [
    "*://*/*"
  ],
  "action": {
    "default_popup": "popup/index.html",
    "default_icon": {
      "16": "logo.png",
      "32": "logo.png",
      "48": "logo.png",
      "128": "logo.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "style.css"
      ]
    }
  ],
  "icons": {
    "16": "logo.png",
    "32": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}